<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_hp"
    tools:context=".MenuInformasi">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageButton
            android:padding="10dp"
            android:id="@+id/btnKembali"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_chevron_left_black_24dp"/>
        <TextView
            android:id="@+id/toolbar"
            android:layout_toRightOf="@+id/btnKembali"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Informasi"
            android:textSize="20dp"
            android:padding="10dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#00FCD1"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="Ora Ribet App"
                android:gravity="center"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textColor="#707070"
                android:textSize="15dp"
                android:text="Sistem Administrasi Pencatatan Sipil Online"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:background="@drawable/plumber_35611_960_720_57b1bdeb729373a115425e34"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <Button
                android:background="@drawable/custom_button"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:text="Informasi"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:textColor="#707070"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="Ora Ribet App merupakan sebuah aplikasi layanan masyarakat yang berguna untuk membantu masyarakat dalam pengurusan administrasi di disdukcapil tanpa harus datang langsung ke kantor untuk mengurusnya, cukup dengan gadget masyarakat bisa mengurusnya dan nanti dokumen akan dikirim langsung ke rumah melalui kantor pos"
                android:layout_width="match_parent"
                android:fontFamily="@font/abel_regular"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>