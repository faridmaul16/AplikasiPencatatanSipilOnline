<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/iphone"
    tools:context=".MenuPesan">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageButton
            android:padding="10dp"
            android:id="@+id/btnKembali"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_chevron_left_black_24dp"/>
        <TextView
            android:id="@+id/toolbar"
            android:layout_toRightOf="@+id/btnKembali"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Pesan"
            android:textSize="20dp"
            android:padding="10dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:fontFamily="@font/abel_regular"
            android:textColor="#707070"
            android:padding="15dp"
            android:textSize="20dp"
            android:text="Terima kasih sudah mendaftar, silahkan cek email anda untuk konfirmasi akun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>