<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_hp"
    tools:context=".MenuLayanan">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageButton
            android:padding="10dp"
            android:id="@+id/btnKembali"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_chevron_left_black_24dp"/>
        <TextView
            android:id="@+id/toolbar"
            android:layout_toRightOf="@+id/btnKembali"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Layanan"
            android:textSize="20dp"
            android:padding="10dp"/>

    </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="703dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Layanan Online"
                    android:textColor="#707070"
                    android:textSize="30dp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@drawable/plumber_35611_960_720_57b1bdeb729373a115425e34" />

                <Button
                    android:id="@+id/btnKK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/custom_button"
                    android:text="Pembuatan KK"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnAkta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_button"
                    android:text="Pembuatan Akta Kelahiran"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnKartukuning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_button"
                    android:text="Pembuatan Kartu Kuning"
                    android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>